!!! xterm config start !!!
XTerm.termName: rxvt-unicode
XTerm*background:black
XTerm*foreground:white
XTerm*utf8:1
XTerm*selectToClipboard:false
xterm*font:     *-fixed-*-*-*-12-*
!!! xterm config end !!!

!!!! urxvt config start !!!
! do not scroll with output
URxvt*scrollTtyOutput: false

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true

! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true
!URxvt.font: -misc-fixed-bold-r-normal--15-140-75-75-c-90-iso8859-1
!URxvt.font: -xos4-terminus-medium-r-normal--12-120-72-72-c-60-iso10646-1
!URxvt.font: xft:terminus:size=10
!URxvt*font:           xft:Inconsolata:size=8
URxvt*font: xft:Dejavu Sans Mono:pixelsize=12

URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.scrollBar_floating: false
URxvt.scrollstyle: rxvt

! Gentoo defaults
!-*- Perl extensions -*-
URxvt.perl-ext-common: default,selection-to-clipboard,pasta,matcher,keyboard-select,font-size

! Perl copy/paste with url open
URxvt.keysym.M-u:     perl:url-select:select_next
URxvt.url-launcher:   /usr/bin/firefox
URxvt.underlineURLs:  True
URxvt.matcher.button: 1
URxvt.keysym.M-Escape:perl:keyboard-select:activate
URxvt.keysym.Control-Shift-V:     perl:pasta:paste

! Perl font change
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease
URxvt.keysym.C-S-Up:   font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal
URxvt.keysym.C-equal:  font-size:reset
URxvt.keysym.C-slash:  font-size:show
URxvt.font-size.step: 4

URxvt.clipboard.autocopy: false

!!!! Gentoo Linux color scheme !!!
! Colors
URxvt*background: #000000
URxvt*foreground: #B2B2B2
! black
URxvt*color0:  #000000
URxvt*color8:  #686868
! red
URxvt*color1:  #B21818
URxvt*color9:  #FF5454
! green
URxvt*color2:  #18B218
URxvt*color10: #54FF54
! yellow
URxvt*color3:  #B26818
URxvt*color11: #FFFF54
! blue
URxvt*color4:  #1818B2
URxvt*color12: #5454FF
! purple
URxvt*color5:  #B218B2
URxvt*color13: #FF54FF
! cyan
URxvt*color6:  #18B2B2
URxvt*color14: #54FFFF
! white
URxvt*color7:  #B2B2B2
URxvt*color15: #FFFFFF
!!! urxvt config end !!!

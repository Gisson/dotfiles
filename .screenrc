termcapinfo xterm "Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm"
termcapinfo xterm-color "Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm"
termcapinfo rxvt-unicode "Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm"
defbce on
hardstatus on
hardstatus alwayslastline
hardstatus string "%{.kW}%-w%{.W}%n %t%{-}%{=b kw}%?%+w%? %=%H " #B&W & date&time
altscreen on
escape ^Bb
startup_message off
stty erase ^?

## Start default shells
shell	bash
#screen -t 'root' su -
#screen -t
autodetach on

# I like to hear the beep.
vbell on
vbell_msg ''
termcapinfo *  vb=:
defscrollback 3000
scrollback 3000
